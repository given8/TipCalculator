* {
  box-sizing: border-box;
  padding: 0;
  margin: 0;
}

body {
  font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
  background-color: #b2fcfc;
  text-align: center;
  display: grid;
  place-items: center;
  min-height: 100vh;
}

.mainContainer {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.container {
  border-radius: 20px;
  background-color: white;
  width: clamp(600px, 80%, 600px);
  min-height: 400px;
  box-shadow: 0 0 8px rgba(0, 0, 0, 0.1);
  box-shadow: inset;
  display: grid;
  align-items: center;
  padding: 10px;
  column-gap: 10px;
  grid-template-columns: repeat(2, 1fr);
}

.userEntry {
  display: grid;
  grid-template-rows: 1fr 1.5fr 1fr;
  row-gap: 20px;
}

.calculationResult {
  height: 100%;
  background-color: #083c49;
  border-radius: 10px;
}

.entryContainer {
  display: flex;
  flex-direction: column;
}

label {
  align-self: flex-start;
}

input {
  padding: 10px;
  border: none;
  background-color: #e9ffff;
}

.tipButton {
  min-width: 80px;
  border: none;
  color: #083c49;
}