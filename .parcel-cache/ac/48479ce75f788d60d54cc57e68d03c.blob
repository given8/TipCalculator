* {
  box-sizing: border-box;
  padding: 0;
  margin: 0;
}

body {
  font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
  background-color: #b2fcfc;
  text-align: center;
  display: grid;
  width: 100%;
  padding: 5px;
  place-items: center;
  min-height: 100vh;
}

.mainContainer {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.container {
  border-radius: 20px;
  background-color: white;
  min-height: 400px;
  box-shadow: 0 0 8px rgba(0, 0, 0, 0.1);
  box-shadow: inset;
  display: grid;
  align-items: center;
  padding: 10px;
  gap: 10px;
  grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
}

.userEntry {
  display: grid;
  grid-template-rows: 1fr 1.5fr 1fr;
  row-gap: 20px;
}

.calculationResult {
  height: 100%;
  background-color: #083c49;
  border-radius: 10px;
  padding: 30px;
  display: grid;
  grid-template-columns: 1fr 1fr;
  grid-template-rows: 1fr 1fr 3fr;
}
.calculationResult p {
  text-align: left;
  color: white;
}
.calculationResult span {
  color: #1294a5;
}
.calculationResult h2 {
  text-align: right;
  color: #34e3e9;
}
.calculationResult button {
  font-weight: bold;
  text-transform: uppercase;
  align-self: end;
  border-radius: 2px;
  padding: 10px 0px;
  grid-area: 3/1/4/3;
  background-color: #1288a5;
  color: #bef6f8;
  border: none;
}

.entryContainer {
  display: flex;
  flex-direction: column;
}

label {
  align-self: flex-start;
}

input {
  padding: 10px;
  border: none;
  background-color: #e9ffff;
}

.tipButtonContainer {
  display: grid;
  grid-template-rows: 1fr 1fr;
  grid-template-columns: repeat(3, 1fr);
  gap: 5px;
  place-items: center;
  margin-top: 10px;
}

.tipButton {
  min-width: 80px;
  border: none;
  border-radius: 5px;
  background-color: #083c49;
  color: white;
  font-weight: bold;
  padding: 5px;
  cursor: pointer;
}

.click {
  background-color: #81d3e7;
  color: black;
}